<div>
  <h1>All Users</h1>
  <div class="container">

    <table class="table-all">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Is Active?</th>
        <th>Actions</th>
      </tr>
      <% @all_users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <% if user.is_pending == false %>
            <td>Active</td>
          <% else %>
            <td>Pending</td>
          <% end %>
          <td><%= link_to "Edit", edit_user_path(user) %> | <%= link_to "Show", show_user_path(user) %></td>
        </tr>
      <% end %>
    </table>
        <div class="actions2"><%= link_to 'Create New User', new_admin_path, class: 'btn-primary' %></div>
  </div>
  <%= button_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn-danger" do %>
    Logout
  <% end %>
</div>
