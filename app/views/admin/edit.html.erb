<h1>Edit User</h1>

<hr>

<%= form_with url: update_user_path, method: :patch, scope: :user do |f| %>
  <div class="field">
    <%= f.label :first_name, "First Name: " %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Last Name: " %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email, "Email: " %>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>
<hr>
<br>